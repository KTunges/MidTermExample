@model MidTermProject.Models.Book

@{
    ViewData["Title"] = "Xoá sách";
}

<div class="container mt-4">
    <h2 class="mb-3 text-danger">🗑️ Xác nhận xoá sách</h2>

    <div class="alert alert-warning">
        <strong>Bạn có chắc muốn xoá sách này không?</strong>
    </div>

    <dl class="row">
        <dt class="col-sm-2">Tiêu đề</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Tác giả</dt>
        <dd class="col-sm-10">@Model.Author?.Name</dd>

        <dt class="col-sm-2">Mô tả</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Ảnh bìa</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.CoverImagePath))
            {
                <img src="@Model.CoverImagePath" width="100" />
            }
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="BookId" />
        <button type="submit" class="btn btn-danger">Xoá</button>
        <a asp-action="Index" class="btn btn-secondary">Huỷ</a>
    </form>
</div>
